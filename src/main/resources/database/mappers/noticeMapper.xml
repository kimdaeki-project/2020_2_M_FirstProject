<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hclass.project1.notice.NoticeDAO">

	<select id="noticeSelect" parameterType="java.lang.Long" resultType="com.hclass.project1.notice.NoticeDTO">
		select * from notice where num = #{num}
	</select>

<select id="noticeList" resultType="com.hclass.project1.notice.NoticeDTO" parameterType="com.hclass.project1.util.Pager">
		select * from
		(select rownum R, N.* from 
		(select * from notice where 
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			
			<when test="kind == 'wr'">
				writer
			</when>
			
			<otherwise>
				contents
			</otherwise>
		</choose>
		like '%'||#{search}||'%' order by num desc) N)
		where R between #{startRow} and #{lastRow}
	</select>
	
	<select id="noticeCount" resultType="java.lang.Long" parameterType="com.hclass.project1.util.Pager">
		select count(num) from notice
		where 
		<choose>
			<when test="kind == 'tt'">
				title
			</when>
			<when test="kind == 'wr'">
				writer
			</when>
			<otherwise>
				contents
			</otherwise>
		</choose>
		like '%' || #{search} || '%'
	</select>

</mapper>
